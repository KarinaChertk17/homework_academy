import random

#ex1
arg1=int(input("Введите 1 значение:"))
op =int(input("Введите знак : +, -, *"))
arg2=int(input("Введите 2 значение:"))
#выше мы ввели все значения
if op == '+':#если выбрали плюс
    print(arg1 + arg2) # то 1 зн + 2 зн
elif op == '-':#elif знак - выбрали
    print(arg1 - arg2)#то 1 зн - 2 зн
else:#иначе
    print(arg1 * arg2)#умножение
print(arg1, op, arg2)

#ex2
#библиотеку рандом подключила выше
res = [random.randrange(-2000, 5000) for i in range(10)] #мы подключи значение рандом
print ("рандомный список чисел: " +  str(res)) #рандомный список и выводим строку результата
a = max(res) # значение максимальное 
print("максимальное число: ", a)# значение максимальное выводим
b = min(res)# значение минимальное 
print("минимальное число: ", b)# значение минимальное выводим
i = 0 #i = 0
print('кол-во положительных чисел:', sum(i > 0 for i in res)) #выводим кол-во пол.чисел
print('кол-во отрицательных чисел:', sum(i < 0 for i in res)) #выводим кол-во отриц.чисел
print('кол-во нулей чисел:', sum(i == 0 for i in res)) #выводим кол-во нулей чисел
